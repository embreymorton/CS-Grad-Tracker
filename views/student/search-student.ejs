<!-- /views/student/search-student.ejs -->

<p>Search students</p>
<div class="search-bar">
  <form action="/student" method="get">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <input type="text" class="form-control search-last-name" id="searchLastName" name="lastName" placeholder="Last name"/>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-md-8">
        <input type="number" pattern=".{9,9}" class="form-control search-pid" id="searchPid" name="pid" placeholder="PID"/>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-md-8">
        <select name="status" class="form-control search-status">
          <option value="" disabled selected hidden>Choose status</option>
          <%for(var i = 0; i < locals.status.length; i++){ %>
          <option value=<%=locals.status[i]%> > <%=locals.status[i]%> </option>
          <% } %>
        </select>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-md-4 offset-md-4">
        <button type="submit" class="btn btn-primary search-student-submit">Search</button>
      </div>
    </div>
  </form>
</div>
<% if (locals.admin) { %>
<div class="button-section">
  <a href="/student/create" class="btn btn-secondary btn-block create-student-button">Create student</a>
  <a href="/student/upload/false" class="btn btn-secondary btn-block upload-student-button">Upload students</a>
  <a href="/student/download" class="btn btn-secondary btn-block download-student-button">Download students</a>
  <a href="/student/uploadCourses/false" class="btn btn-secondary btn-block upload-courses-button">Upload courses</a>
</div>
<% } %>
<br>
