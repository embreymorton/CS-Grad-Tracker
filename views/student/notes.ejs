<!-- views/job/notes.ejs -->
<!DOCTYPE html>

<html>
	<head>
		<title>Student Notes</title>
		<%- include('../partials/head.ejs') %>
	</head>
	
	<body>
		<div class="container-fluid h-100">
			<div class="row h-100">

				<div class='col-lg-2 sidebar text-center'>
					<%- include('../partials/admin-sidebar.ejs') %>
				</div>

				<div align ="center" class="col-lg-10 panelbg text-center">

					<%- include("./studentBarPartial.ejs") %>
					<h4><%=student.lastName%>, <%=student.firstName%></h4>
					<h1>Notes</h1>

					<% for(var i = 0; i < notes.length; i++) { %>
					<form action="/student/notes/upload/<%=student._id%>/<%=notes[i]._id%>" method="post">
						<div class="form-group row">
							<div class="col-md-12">
								<div class="row">
									<label class="col-md-1">Title</label>
									<div class="col-md-4">
										<input type="text" class="form-control" name="title" value="<%=notes[i].title%>" required/>
									</div>
								</div>

								<div class="row">
									<label class="col-md-1">Date</label>
									<div class="col-md-4">
										<input type="hidden" class="form-control" name="date" value="<%=notes[i].date%>" required><%=notes[i].date%></input>
									</div>
								</div>

								<div class="row">
									<label class="col-md-1">Note</label>
									<div class="col-md-4">
										<input type="text" class="form-control" name="note" value="<%=notes[i].note%>" required/>
									</div>
								</div>

								<div class="col-md-8 offset-md-2">
									<button type="submit" class="btn btn-success">Update</button>
								</div>
							</div>
						</div>
					</form>
					<form action="/student/notes/delete/<%=student._id%>" method="post">
						<input type="hidden" name="noteID" value=<%=notes[i]._id%> />
						<div class="col-md-8 offset-md-2">
							<button type="submit" class="btn btn-default">Delete</button>
						</div>
					</form>
					<% } %>

					<form action="/student/notes/upload/<%=student._id%>" method="post">
						<div class="form-group row">
							<div class="col-md-12">
								<label class="col-md-4">Title</label>
								<div class="col-md-8">
									<input type="text" class="form-control" name="title" required/>
								</div>

								<label class="col-md-4">Date</label>
								<div class="col-md-8">
									<input type="Date" class="form-control" name="date" value="<%=Date().toString()%>" required/>
								</div>

								<label class="col-md-4">Note</label>
								<div class="col-md-8">
									<input type="text" class="form-control" name="note" required/>
								</div>

								<div class="col-md-8 offset-md-2">
									<button type="submit" class="btn btn-success">Submit</button>
								</div>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</body>
</html>