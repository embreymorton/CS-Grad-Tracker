<p>Search Faculty</p>
<div class="search-bar">
  <form action="/faculty" method="get">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <input
          for="searchPid"
          placeholder="Search PID"
          type="number"
          pattern=".{9,9}"
          class="form-control"
          id="searchPid"
          name="pid"
        />
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-md-8">
        <input
          for="searchLastname"
          placeholder="Search last name"
          type="text"
          class="form-control"
          id="searchLastname"
          name="lastName"
        />
      </div>
    </div>
    <div class="row justify-content-center">
      <label lang="en" for="searchActive">Search active:</label>
      <div class="col-md-8">
        <input
          for="searchActive"
          placeholder="Active"
          type="checkbox"
          class="form-control"
          id="searchActive"
          name="active"
          checked
          value="true"
        />
      </div>
    </div>
    <div class="form-group row">
      <div class="col-md-4 offset-md-4">
        <button type="submit" class="btn btn-primary">Search</button>
      </div>
    </div>
  </form>
</div>
<br />
<div class="button-section">
  <a href="/faculty/create" class="btn btn-secondary btn-block"
    >Create Faculty</a
  >
  <a href="/faculty/download" class="btn btn-secondary btn-block"
    >Download faculty</a
  >
  <a href="/faculty/upload/false" class="btn btn-secondary btn-block"
    >Upload faculty</a
  >
</div>
<br />
